<Window x:Class="Homework03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework03"
        mc:Ignorable="d"
        Title="Homework03-Linehan, John" Height="350" Width="525">

        <ListView x:Name="uxList" Background="Azure" Grid.Row="1" ItemsSource="{Binding uxList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}">
                        <GridViewColumnHeader Content="Name" Width="150" GridViewColumnHeader.Click="uxListClick"/>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Password}">
                        <GridViewColumnHeader Content="Password" Width="150" GridViewColumnHeader.Click="uxListClick"/>
                    </GridViewColumn>
            </GridView>
            </ListView.View>
            
        </ListView>

</Window>
